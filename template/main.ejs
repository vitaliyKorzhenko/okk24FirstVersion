<link rel="stylesheet" href="/jsLibs/themes/default/easyui.css">
<link rel="stylesheet" href="/jsLibs/themes/icon.css">
<!--<link rel="stylesheet"  href="'/jsLibs/demo/demo.css">-->

<script src="/jsLibs/jquery.min.js"></script>
<script src="/jsLibs/jquery.easyui.min.js"></script>
<script src="/javascripts/main.js"></script>
<script src="/javascripts/cookieTemplate.js"></script>
<script type="text/javascript" src="/jsLibs/srcDataGrid/datagrid-cellediting.js"></script>

<div class="easyui-layout"  style="width:100%;height:100%">
    <div data-options="region:'north',split:true" style="height:80px;">

        <div style="margin-bottom:20px">
            <a href="javascript:void(0)" class="easyui-linkbutton" onclick="getFreeItem()"
               style="width:80px">Получить Задачу!</a>
            <label id="lblUser"></label>
            <a href="javascript:void(0)" class="easyui-linkbutton" onclick="getFreeItem()"
               style="width:80px">Выход</a>
        </div>
    </div>
    <div data-options="region:'east',split:true" title="Критерии по Задачи" style="width:500px;">
        <table class="easyui-datagrid"  style="width:700px;height:250px"
               data-options="rownumbers:true,singleSelect:true" id="idCriterionGrid">
            <thead>
            <tr>
                <th data-options="field:'name',width:120">Название Критерия</th>
                <th data-options="field:'description',width:200">Описание Критерия</th>
                <th data-options="field:'isActive',width:80,align:'center',editor:{type:'checkbox',options:{on:'Да',off:'Нет'}}">
                    Было ли Выполнено
                </th>
            </tr>
            </thead>
        </table>
    </div>
    <div data-options="region:'center',title:'Параметры',iconCls:'icon-ok'" style="width:800px;height:500px">
        <div style="margin:20px 0;"></div>
        <table class="easyui-datagrid"  style="width:800px;height:100px"
               data-options="rownumbers:true,singleSelect:true" id="idItemGrid">
        </table>
        <div>
            <a href="javascript:void(0)" class="easyui-linkbutton" onclick="saveAnswer()" style="width:80px">Сохранить Результат</a>
        </div>
    </div>
    <div data-options="region:'west',split:true" title="Информация про  задание" style="width:300px;">
        <form id="ff" class="easyui-form" method="post" data-options="novalidate:true">
            <div style="margin-bottom:20px">
                <input class="easyui-textbox" name="name" id="idNameTask" style="width:100%;height:60px"
                       data-options="label:'Название:'">
            </div>
            <div style="margin-bottom:20px">
                <input class="easyui-textbox" name="description" id="idDescriptionTask" style="width:100%;height:60px"
                       data-options="label:'Описание:',multiline:true">
            </div>
        </form>
    </div>
</div>




<script>
    $('#idCriterionGrid').datagrid({}).datagrid('enableCellEditing').datagrid('gotoCell', {
        index: 0,
        field: 'isActive'
    });
</script>






























